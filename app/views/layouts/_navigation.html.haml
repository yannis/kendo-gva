- if request[:controller] != "pages"
  .container
    .row
      .col-md-9
        %nav.navbar#mainnav
          .navbar-header
            %button.navbar-toggle{type: "button", data: {toggle: "collapse", target: ".navbar-collapse"}}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to image_tag("logo_100.png", size: "100X100", alt: "Logo"), root_path, class: 'navbar-brand'
          .collapse.navbar-collapse.masthead-nav
            %ul.nav.navbar-nav.navbar-right
              = render 'layouts/navigation_links'
